<div class="page-header"><h1>Edit model</h1></div>

<% form_for(model, {action: path_to.model(model), method: 'PUT', id: "model_form", class: 'form-horizontal'}, function (form) { %>
    <%- partial('models/form.ejs', {locals: {form: form, model: model}}) %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Update model', {class: 'btn btn-primary'}) %> or
        <%- link_to('Cancel', path_to.model(model), {class: 'btn'}) %>
    </div>
<% });%>